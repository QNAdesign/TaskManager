<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.task"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.task.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.task.RegisterActivity"
            android:label="RegisterActivity" >
        </activity>
        <activity
            android:name="com.task.Mainpage"
            android:label="Mainpage" >
        </activity>
        <activity
            android:name="com.task.CreateWorkspace"
            android:label="CreateWorkspace" >
        </activity>
        <activity
            android:name="com.task.Editpage"
            android:label="@string/title_activity_editpage" >
        </activity>
        <activity
            android:name="com.task.WorkspaceContent"
            android:label="@string/title_activity_workspace_content" >
        </activity>
        <activity
            android:name="com.task.CreateProject"
            android:label="@string/title_activity_create_project" >
        </activity>
        <activity
            android:name="com.task.AddLocationMapActivity"
            android:text="@string/add_location_to_task" />

        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="com.task.AddLocationMap"
            android:label="@string/title_activity_add_location_map" >
        </activity>
    </application>

</manifest>